---
import { Image } from "astro:assets";
import ContactForm from "@/components/ContactForm";
import EmissionBar from "@/components/EmissionBar";
import Value from "@/components/Value.astro";
import Layout from "@/layouts/Layout.astro";
import stockImage2 from "@/media/stockImage2.jpg";
import stockImage3 from "@/media/stockImage3.jpg";
import { getI18N } from "@/i18n";

const contactFormI18n = getI18N(Astro.currentLocale || "es").contactForm;
const i18n = getI18N(Astro.currentLocale || "es").collaborative;
---

<Layout
  title={i18n.title}
  description={i18n.description}
  keywords={i18n.keywords}
  image="/media/stockImage3.jpg"
>
  <section class="w-full py-12 md:py-24 lg:py-32">
    <div
      class="container grid items-center gap-6 px-4 md:px-6 lg:grid-cols-2 lg:gap-10"
    >
      <div class="space-y-4">
        <div
          class="rounded-full px-3 py-1 text-sm leading-6 text-muted-foreground ring-1 ring-muted-foreground/20 flex flex-row gap-2 w-fit"
        >
          <p class="hidden lg:block text-muted-foreground">
            {i18n.hero.exploring}
          </p>

          <a
            href="#contact-us"
            class="flex flex-row gap-2 font-semibold text-primary"
          >
            <p>{i18n.hero.contactUs}</p>
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width={1.5}
              stroke="currentColor"
              class="w-4 h-4 my-auto"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M17.25 8.25 21 12m0 0-3.75 3.75M21 12H3"></path>
            </svg>
          </a>
        </div>

        <h1 class="text-4xl font-bold tracking-tighter sm:text-5xl md:text-6xl">
          {i18n.hero.title}
        </h1>
        <p class="max-w-[600px] text-gray-500 md:text-xl dark:text-gray-400">
          {i18n.hero.description}
        </p>
      </div>
      <Image
        alt="Hero"
        class="mx-auto aspect-square overflow-hidden rounded-xl object-cover sm:w-full"
        src={stockImage2}
        quality={1}
        loading="eager"
      />
    </div>
  </section>

  <h2 class="text-center text-3xl font-bold my-5">
    {i18n.whyCollaborative}
  </h2>

  <section
    class="grid grid-cols-1 gap-4 mt-8 xl:mt-12 xl:gap-8 md:grid-cols-2 xl:grid-cols-3 container"
  >
    <Value
      title={i18n.values[0].title}
      description={i18n.values[0].description}
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="size-8"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M7.864 4.243A7.5 7.5 0 0 1 19.5 10.5c0 2.92-.556 5.709-1.568 8.268M5.742 6.364A7.465 7.465 0 0 0 4.5 10.5a7.464 7.464 0 0 1-1.15 3.993m1.989 3.559A11.209 11.209 0 0 0 8.25 10.5a3.75 3.75 0 1 1 7.5 0c0 .527-.021 1.049-.064 1.565M12 10.5a14.94 14.94 0 0 1-3.6 9.75m6.633-4.596a18.666 18.666 0 0 1-2.485 5.33"
        ></path>
      </svg>
    </Value>

    <Value
      title={i18n.values[1].title}
      description={i18n.values[1].description}
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="2"
        stroke="currentColor"
        aria-hidden="true"
        class="size-8"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"
        ></path>
      </svg>
    </Value>

    <Value
      title={i18n.values[2].title}
      description={i18n.values[2].description}
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="2"
        stroke="currentColor"
        aria-hidden="true"
        class="size-8"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"
        ></path>
      </svg>
    </Value>

    <Value
      title={i18n.values[3].title}
      description={i18n.values[3].description}
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="2"
        stroke="currentColor"
        aria-hidden="true"
        class="size-8"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"
        ></path>
      </svg>
    </Value>

    <Value
      title={i18n.values[4].title}
      description={i18n.values[4].description}
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="2"
        stroke="currentColor"
        aria-hidden="true"
        class="size-8"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"
        ></path>
      </svg>
    </Value>

    <Value
      title={i18n.values[5].title}
      description={i18n.values[5].description}
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="2"
        stroke="currentColor"
        aria-hidden="true"
        class="size-8"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"
        ></path>
      </svg>
    </Value>
  </section>

  <EmissionBar client:visible i18n={i18n.emissionBar} />

  <section class="">
    <div class="container px-6 py-10 mx-auto lg:flex lg:items-center">
      <div class="w-full space-y-12 lg:w-1/2">
        <div>
          <h1 class="text-2xl font-semibold lg:text-3xl max-w-md">
            {i18n.benefitsTitle}
          </h1>

          <div class="mt-2">
            <span class="inline-block w-40 h-1 bg-primary rounded-full"></span>
            <span class="inline-block w-3 h-1 ml-1 bg-primary rounded-full"
            ></span>
            <span class="inline-block w-1 h-1 ml-1 bg-primary rounded-full"
            ></span>
          </div>
        </div>

        <div class="md:flex md:items-start md:-mx-4">
          <span
            class="inline-block p-2 text-primary bg-card border rounded-xl md:mx-4"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="lucide lucide-truck"
              ><path
                d="M14 18V6a2 2 0 0 0-2-2H4a2 2 0 0 0-2 2v11a1 1 0 0 0 1 1h2"
              ></path><path d="M15 18H9"></path><path
                d="M19 18h2a1 1 0 0 0 1-1v-3.65a1 1 0 0 0-.22-.624l-3.48-4.35A1 1 0 0 0 17.52 8H14"
              ></path><circle cx="17" cy="18" r="2"></circle><circle
                cx="7"
                cy="18"
                r="2"></circle></svg
            >
          </span>

          <div class="mt-4 md:mx-4 md:mt-0">
            <h1 class="text-xl font-semibold">
              {i18n.benefits[0].title}
            </h1>

            <p class="mt-3 text-muted-foreground">
              {i18n.benefits[0].description}
            </p>
          </div>
        </div>

        <div class="md:flex md:items-start md:-mx-4">
          <span
            class="inline-block p-2 text-primary bg-card border rounded-xl md:mx-4"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="lucide lucide-route"
              ><circle cx="6" cy="19" r="3"></circle><path
                d="M9 19h8.5a3.5 3.5 0 0 0 0-7h-11a3.5 3.5 0 0 1 0-7H15"
              ></path><circle cx="18" cy="5" r="3"></circle></svg
            >
          </span>

          <div class="mt-4 md:mx-4 md:mt-0">
            <h1 class="text-xl font-semibold">
              {i18n.benefits[1].title}
            </h1>

            <p class="mt-3 text-muted-foreground">
              {i18n.benefits[1].description}
            </p>
          </div>
        </div>

        <div class="md:flex md:items-start md:-mx-4">
          <span
            class="inline-block p-2 text-primary bg-card border rounded-xl md:mx-4"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="lucide lucide-store"
              ><path
                d="m2 7 4.41-4.41A2 2 0 0 1 7.83 2h8.34a2 2 0 0 1 1.42.59L22 7"
              ></path><path d="M4 12v8a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2v-8"
              ></path><path d="M15 22v-4a2 2 0 0 0-2-2h-2a2 2 0 0 0-2 2v4"
              ></path><path d="M2 7h20"></path><path
                d="M22 7v3a2 2 0 0 1-2 2v0a2.7 2.7 0 0 1-1.59-.63.7.7 0 0 0-.82 0A2.7 2.7 0 0 1 16 12a2.7 2.7 0 0 1-1.59-.63.7.7 0 0 0-.82 0A2.7 2.7 0 0 1 12 12a2.7 2.7 0 0 1-1.59-.63.7.7 0 0 0-.82 0A2.7 2.7 0 0 1 8 12a2.7 2.7 0 0 1-1.59-.63.7.7 0 0 0-.82 0A2.7 2.7 0 0 1 4 12v0a2 2 0 0 1-2-2V7"
              ></path></svg
            >
          </span>

          <div class="mt-4 md:mx-4 md:mt-0">
            <h1 class="text-xl font-semibold">
              {i18n.benefits[2].title}
            </h1>

            <p class="mt-3 text-muted-foreground">
              {i18n.benefits[2].description}
            </p>
          </div>
        </div>

        <div class="md:flex md:items-start md:-mx-4">
          <span
            class="inline-block p-2 text-primary bg-card border rounded-xl md:mx-4"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="lucide lucide-fingerprint"
              ><path d="M12 10a2 2 0 0 0-2 2c0 1.02-.1 2.51-.26 4"></path><path
                d="M14 13.12c0 2.38 0 6.38-1 8.88"></path><path
                d="M17.29 21.02c.12-.6.43-2.3.5-3.02"></path><path
                d="M2 12a10 10 0 0 1 18-6"></path><path d="M2 16h.01"
              ></path><path d="M21.8 16c.2-2 .131-5.354 0-6"></path><path
                d="M5 19.5C5.5 18 6 15 6 12a6 6 0 0 1 .34-2"></path><path
                d="M8.65 22c.21-.66.45-1.32.57-2"></path><path
                d="M9 6.8a6 6 0 0 1 9 5.2v2"></path></svg
            >
          </span>

          <div class="mt-4 md:mx-4 md:mt-0">
            <h1 class="text-xl font-semibold">
              {i18n.benefits[3].title}
            </h1>

            <p class="mt-3 text-muted-foreground">
              {i18n.benefits[3].description}
            </p>
          </div>
        </div>
      </div>

      <div class="hidden lg:flex lg:items-center lg:w-1/2 lg:justify-center">
        <Image
          class="size-[28rem] object-cover xl:size-[34rem] rounded-full"
          src={stockImage3}
          alt="image"
        />
      </div>
    </div>
  </section>

  <ContactForm i18n={contactFormI18n} client:visible />
</Layout>
