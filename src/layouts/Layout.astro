---
import Footer from "../components/Footer.astro";
import Navbar from "../components/Navbar.astro";
import { cn } from "../utils/utils";
interface Props {
  title: string;
  description: string;
  keywords: string;
  image?: string;
  date?: Date;
  invisible?: boolean;
  section?: string;
}
const {
  title,
  description,
  keywords,
  image,
  date,
  invisible = false,
  section,
} = Astro.props;

const cookie = Astro.request.headers.get("cookie");
const theme = cookie?.split("theme=")[1].split(";")[0];
---

<!doctype html>
<html lang="en" class={cn([theme, "scroll-smooth"])}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/media/brand/logo.svg" />
    <meta
      name="robots"
      content={invisible ? "noindex,follow" : "index,follow"}
    />
    <title>{title}</title>
    {date && <meta name="date" content={date.toISOString()} />}

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    {image && <meta property="og:image" content={image} />}
    <meta property="og:url" content={Astro.url.pathname} />
    <meta property="og:type" content="website" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    {image && <meta name="twitter:image" content={image} />}
  </head>

  <body>
    <Navbar section={section} />

    <!-- Background lines-->
    <div class="overflow-hidden opacity-20 pointer-events-none select-none">
      <img
        class="fixed size-[80%] -z-40 -translate-y-1/3 -translate-x-1/4 cursor-none"
        src="/media/brand/line-6.svg"
        alt="background"
